---
const { fontSize } = Astro.props;
---

<button>
    <slot />
</button>

<style define:vars={{ fontSize }}>
    button {
        display: block;
        background-color: transparent;
        border: none;
        font-family: 'Montserrat', sans-serif;
        color: var(--textColor);
        cursor: pointer;
        font-size : var(--fontSize);
        position: relative;
        padding-top : 1rem;
        transition: transform 250ms;
        z-index: 0;
    }

    button::before {
        content: '';
        position : absolute;
        display : block;
        width : 100%;
        height : 4%;
        background-color: var(--textColor);
        transform: scaleX(0);
        transition: transform 250ms;
        bottom: 0;
        left: 0;
    }

    button:hover::before {
        transform: scaleX(1);
    }

    button:hover {
        transform: translateY(-0.25rem);
    }
</style>