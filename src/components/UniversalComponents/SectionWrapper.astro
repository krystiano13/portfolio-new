---
const { gap, y } = Astro.props;
---

<main>
    <slot />
</main>

<style define:vars={{ gap, y }}>
    main {
        width : 100vw;
        height : 100vh;
        transform : translateY(var(--y));
        gap: var(--gap);

        display : flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;

        @media screen and (max-width : 800px) {
            transform: translateY(0rem);
        }
    }
</style>