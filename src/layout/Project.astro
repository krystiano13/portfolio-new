---
import Layout from './Layout.astro';
import Background from '../components/Home/Background.astro';

const { frontmatter } = Astro.props;
---

<Layout>
    <Background />
    <main>
        <h1>{ frontmatter.title }</h1>
        <section class="text">
            <h2>About Project:</h2>
            <p>{ frontmatter.about }</p>
        </section>
        {
            frontmatter.gallery.map(item => (
                <section class="image"></section>
            ))
        }
    </main>
</Layout>

<style lang="scss">
    main {
      width : 100vw;
      transform: translateY(-6vh);
      min-height: 30rem;
      height: 100vh;

      display : flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;

      h1 {
        font-family: 'Montserrat', sans-serif;
        font-size : 3rem;
        color : var(--textColor);
        width : 60%;
        min-width : 25rem;
        position: relative;
        margin-top: 5rem;

        animation: appear1 400ms;
      }

      h1::before {
        content: '';
        position: absolute;
        background-color: var(--textColor);
        width : 100%;
        height : 3px;
        bottom : 0;
        left : 0;
      }

      section {
        width : 60%;
        height : 50%;
        min-height: 30rem;
        background-color: var(--accentColor);
        margin-top: 5rem;
      }

      .text {
        color : var(--textColor);
        font-family: 'Montserrat', sans-serif;

        h2 {
          font-size: 2rem;
        }

        p {
          font-size: 1.1rem;
        }

        h2,p {
          margin : 1rem;
        }
      }
    }
</style>