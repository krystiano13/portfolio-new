---
import Layout from '../layout/Layout.astro';
import Background from '../components/Home/Background.astro';
---

<Layout>
    <Background />
    <main>
        <section>
            <h1>About Me</h1>
            <p>
                I am a graduate of a technical high school specializing in computer science.
                After classes, I devoted myself to learning programming,
                which became my primary hobby at that time.
                I would like to significantly develop my skills in this field
                by starting a career as a programmer.
            </p>
            <a href="CV4_ENG.pdf">
                <button>My Resume</button>
            </a>
        </section>
    </main>
</Layout>

<style lang="scss">
    main {
        width : 100vw;
        height : 100vh;
        transform: translateY(-10vh);

        display: flex;
        justify-content: center;
        align-items: center;

        section {
          width : 50vw;
          min-width: 25rem;
          height : 50vh;
          min-height: 15rem;
          border-radius: 2rem;
          padding : 2rem;

          @media screen and (max-width: 992px) {
            width : 90vw;
            min-width: 25rem;
            height : 50vh;
            min-height: 25rem;
          }

          animation: slideIn 350ms;

          * {
            color : var(--textColor);
            margin-top: 1rem;
            margin-bottom: 1rem;
          }

          h1 {
            font-family: 'Montserrat', sans-serif;
            font-size : 3rem;
          }

          p {
            font-size: 1.6rem;
            max-width : 90%;
            font-family: 'Inter', sans-serif;

            @media screen and (max-width: 992px) {
              font-size: 1.25rem;
              max-width : 100%;
              text-align: left;
            }
          }

          button {
            cursor: pointer;
            border: none;
            background-color: transparent;
            font-size : 1.6rem;
            position: relative;
            font-family: 'Montserrat', sans-serif;
            transition: transform 250ms;
          }

          button:hover {
            transform: translateY(-0.25rem);
          }

          button::before {
            content: '';
            position : absolute;
            display : block;
            width : 100%;
            height : 2px;
            background-color: var(--textColor);
            transform: scaleX(0);
            transition: transform 250ms;
            bottom: 0;
            left: 0;
          }

          button:hover::before {
            transform: scaleX(1);
          }
        }
    }

    @keyframes slideIn {
        from {
          opacity : 0;
          transform: translateX(-5vw);
        }

      to {
        opacity: 1;
        transform: translateX(0vw);
      }
    }
</style>