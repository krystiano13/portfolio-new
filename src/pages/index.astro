---
import Layout from '../layout/Layout.astro';
import Background from '../components/Home/Background.astro';
import SectionWrapper from '../components/UniversalComponents/SectionWrapper.astro';
---

<Layout>
	<Background transition:animate="none" />
	<SectionWrapper id="main" gap="3rem" y="-6vh">
		<h1>Hi, I'm
			<span>
				Krystian Zieja
			</span>
		</h1>
		<h2>
			Web Developer
			<label id="underline">_</label>
		</h2>
		<div class="homeButtons">
			<button>My Projects</button>
			<a href="/about">
				<button>About Me</button>
			</a>
		</div>
	</SectionWrapper>
</Layout>

<script client:load>
	const underline = document.querySelector('#underline');
	let isUnderlineActive = false;

	setInterval(() => {
		isUnderlineActive = !isUnderlineActive;
		if(isUnderlineActive) {
			underline.style.opacity = 1;
		}
		else {
			underline.style.opacity = 0;
		}
	}, 500);
</script>

<style lang="scss">
	.homeButtons {
		display: flex;
		gap : 2rem;
		animation: appear3 800ms;

		a {
			text-decoration: none;
		}

		button {
			display: block;
			background-color: transparent;
			border: none;
			font-family: 'Montserrat', sans-serif;
			color: var(--textColor);
			cursor: pointer;
			font-size : 1.4rem;
			position: relative;
			padding-top : 1rem;
			transition: transform 250ms;
			z-index: 0;
		}

		button::before {
			content: '';
			position : absolute;
			display : block;
			width : 100%;
			height : 4%;
			background-color: var(--textColor);
			transform: scaleX(0);
			transition: transform 250ms;
			bottom: 0;
			left: 0;
		}

		button:hover::before {
			transform: scaleX(1);
		}

		button:hover {
			transform: translateY(-0.25rem);
		}
	}

	h1, h2 {
		color: var(--textColor);
		text-align: center;
		z-index: -3;
	}

	h1 {
		font-weight: 600;
		font-size: 5rem;
		font-family: 'Montserrat', sans-serif;
		animation: appear 400ms;

		span {
			background: -webkit-linear-gradient(45deg, #4782dc, #2769cb);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent
		}
	}

	h2 {
		font-family: 'Inter', sans-serif;
		font-weight: 500;
		font-size : 3rem;
		animation: appear2 550ms;
	}

	@keyframes appear {
		from {
			opacity : 0;
			transform: translateY(-5vh);
		}

		to {
			opacity : 1;
			transform: translateY(0vh);
		}
	}

	@keyframes appear2 {
		0% {
			opacity : 0;
			transform: translateY(-5vh);
		}

		30% {
			opacity : 0;
			transform: translateY(-5vh);
		}

		100% {
			opacity : 1;
			transform: translateY(0vh);
		}
	}

	@keyframes appear3 {
		0% {
			opacity : 0;
			transform: translateY(-5vh);
		}

		60% {
			opacity : 0;
			transform: translateY(-5vh);
		}

		100% {
			opacity : 1;
			transform: translateY(0vh);
		}
	}
</style>


