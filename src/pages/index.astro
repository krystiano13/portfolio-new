---
import Layout from '../layout/Layout.astro';
---

<Layout>
	<main>
		<h1>Hi, I'm
			<span>
				Krystian Zieja
			</span>
		</h1>
		<h2>Web Developer</h2>
		<div class="homeButtons">
			<button>My Projects</button>
			<button>About Me</button>
		</div>
	</main>
</Layout>

<style lang="scss">
	main {
		width : 100vw;
		height : 100vh;

		display : flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap : 3rem;

		.homeButtons {
			display: flex;
			gap : 2rem;

			button {
				background-color: transparent;
				border: none;
				font-family: 'Montserrat', sans-serif;
				color: var(--textColor);
				cursor: pointer;
				font-size : 1.4rem;
				position: relative;
				padding-top : 1rem;
				transition: transform 250ms;
			}

			button::before {
				content: '';
				position : absolute;
				width : 100%;
				height : 5%;
				background-color: var(--textColor);
				top : 99%;
				transform: scaleX(0);
				transition: transform 250ms;
			}

			button:hover::before {
				transform: scaleX(1);
			}

			button:hover {
				transform: translateY(-0.25rem);
			}
		}

		h1, h2 {
			color: var(--textColor);
		}

		h1 {
			font-weight: 600;
			font-size: 5rem;
			font-family: 'Montserrat', sans-serif;

			span {
				background: -webkit-linear-gradient(45deg, #4782dc, #2769cb);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent
			}
		}

		h2 {
			font-family: 'Inter', sans-serif;
			font-weight: 500;
			font-size : 3rem;
		}
	}
</style>


