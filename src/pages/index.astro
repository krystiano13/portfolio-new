---
import Layout from '../layout/Layout.astro';
---

<Layout>
	<main>
		<h1>Hi, I'm
			<span>
				Krystian Zieja
			</span>
		</h1>
		<h2>Web Developer</h2>
	</main>
</Layout>

<style lang="scss">
	main {
		width : 100vw;
		height : 100vh;

		display : flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap : 3rem;

		h1, h2 {
			color: var(--textColor);
		}

		h1 {
			font-weight: 600;
			font-size: 5rem;
			font-family: 'Montserrat', sans-serif;

			span {
				background: -webkit-linear-gradient(45deg, #4782dc, #2769cb);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent
			}
		}

		h2 {
			font-family: 'Inter', sans-serif;
			font-weight: 500;
			font-size : 3rem;
		}
	}
</style>


