---
import Layout from '../layout/layout.astro';
import Background from '../components/Home/Background.astro';
import SectionWrapper from '../components/UniversalComponents/SectionWrapper.astro';
import {ProjectsData} from "../components/Projects/ProjectsData";
---

<Layout>
    <Background/>
    <SectionWrapper y="-6vh" gap="0rem">
        <h1>My Projects</h1>
        <div class="ProjectsWrapper">
            <ul class="ProjectList">
                {
                    ProjectsData.map(item => (
                            <li>{item.name}</li>
                    ))
                }
            </ul>
            <div class="ProjectShowcase"></div>
        </div>
    </SectionWrapper>
</Layout>

<style lang="scss">
  .ProjectsWrapper {
    width: 60%;
    display: flex;
    justify-content: space-between;
    align-items: center;

    ul {
      width: 50%;

      li {
        color: var(--textColor);
        font-family: 'Montserrat', sans-serif;
        list-style: none;
        font-size: 2rem;
        margin-top: 2rem;
        border-bottom: solid 2px var(--textColor);
        width: 80%;
        cursor: pointer;
      }
    }
  }


  h1 {
    font-family: 'Montserrat', sans-serif;
    font-size: 3rem;
    color: var(--textColor);
    width: 60%;
    min-width: 25rem;
    position: relative;
    margin-top: 5rem;

    @media screen and (max-width: 992px) {
      width: 90%;
    }
  }

  h1::before {
    content: '';
    position: absolute;
    background-color: var(--textColor);
    width: 100%;
    height: 3px;
    bottom: 0;
    left: 0;
  }
</style>
