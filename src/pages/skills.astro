---
import Layout from '../layout/Layout.astro';
import Background from '../components/Home/Background.astro';
---

<Layout>
    <Background />
    <main>
        <h1>Skills</h1>
        <div class="skills">

        </div>
    </main>
</Layout>

<style lang="scss">
    main {
        width : 100vw;
        height : 100vh;
        transform: translateY(-10vh);

        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;

        * {
            margin-top: 1rem;
            margin-bottom: 1rem;
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            font-size : 3rem;
            color : var(--textColor);
            width : 50%;
            min-width : 25rem;
        }

        .skills {
          background-color: var(--accentColor);
          width : 50%;
          min-width : 25rem;
          height : 70%;
          min-height: 30rem;
          border-radius: 2rem;
        }
    }
</style>